

<div class="wrapper">
   <%= render partial: "sidebar" %>
    <div class="main-panel expand">

        <!-- TODO Add Footer Partial -->
        <%= render partial: "navbar" %>


        <div class="content">
            <div class="container-fluid">
                <div class="col-md-8 col-md-offset-2">


                  <div class="card card-user">

                         <div class="image">
                            <%= image_tag('background.jpg') %>
                        </div>
                        <div class="content">
                            <div class="author">


                            <% if @user.dp.file.nil? %>
                                <%= image_tag('default-avatar.png', class:"avatar border-white", alt:"...") %>

                            <% else %>
                                <img src="<%=@user.dp.url %>"  class="avatar border-white" alt="..." />

                            <% end %>

                              <h4 class="title"><%= @user.name %><br>
                                 <a href="#"><small><%= @user.email %></small></a>
                              </h4>
                            </div>
                            <p class="description text-center">
                                <% if @user.status  == 0 %>
                                  Status: Member
                                <% elsif @user.status  == 1 %>
                                  Status: Admin
                                <% else %>

                                <% end %>
                            </p>
                        </div>
                        <hr>
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-6">
                                   <%= link_to user_profile_path(current_user) do %>
                                      <h5><%= puts 5 %><br><small>Application(s)</small></h5>
                                   <% end %> 
                                </div>
                                <div class="col-md-6">
                                  <%= link_to user_profile_path(current_user) do %>
                                      <h5><%= puts 10 %><br><small> Organization(s)</small></h5>
                                   <% end %>
                                </div>

                            </div>
                        </div>
                    </div>





         <div class="content">
            <div class="row">

               <div class="col-lg-6 col-md-6 col-md-offset-3">
                  <div class="sharing-area text-center">

                    <h5>Admin?</h5>
                     <%= link_to new_group_path , method: :put do %>
                        <button  type="button" class="btn btn-raised btn-twitter">Create Association</button>
                    <% end %>
                </div>
            </div>
          </div>
      </div>


</div>
</div>
</div>
</div>
</div>





 <script >
    <% flash.each do |key, value| %>
        showMessage('top','center', "<%= value %>", 2);
    <% end %>
</script>